<!DOCTYPE html>
<html lang="en">
    <%- include("partials/header.ejs") %>
    <body>
        <%- include("partials/nav.ejs") %>
        <main>
            <!-- Task Detail Section -->
            <div class="container mt-5 pt-2 min-vh-100" id="taskContainer">
                <div class="d-flex justify-content-between">
                    <h4 class="mb-3 fs-4 white"><%= `${today}` %></h4>
                    <% if (workTask.length === 0) { %>
                        <h4 class="mb-3 fs-6 white">Work!Work!Work!</h4>
                    <% } else { %>
                        <h4 class="mb-3 fs-6 white">Get your job done!</h4>    
                    <% } %>
                </div>
                <div class="d-flex-row">
                    <% for (let i = 0; i<workTask.length;i++){ %>
                        <div class="card card-bg mb-3">
                            <div class="card-body d-flex justify-content-start align-items-center">
                                <input class="form-check-input checkbox-large mt-0 me-3" type="checkbox" value="" id="task<%= i %>" />
                                <label class="form-check-label task-text" for="task<%= i %>">
                                    <%= workTask[i] %>
                                </label>
                            </div>
                        </div>
                    <% } %>
                </div>

                <!-- Add Button -->
                <div class="d-flex justify-content-end">
                    <!-- <button type="submit" class="btn btn-primary btn-lg rounded-circle d-flex justify-content-center align-items-center pb-2" id="addButton">d</button> -->
                    <button type="button" class="addTaskBtn" data-bs-toggle="modal" data-bs-target="#exampleModal">+</button>
                </div>
                <!-- Add Button End -->

                <!-- Modal view -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Task</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form action="/work/submit" method="POST">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="taskForm" class="form-label">What is your Plan?</label>
                                        <textarea class="form-control border border-dark-subtle" id="taskForm" rows="2" name="taskDetail" required></textarea>
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn addBtn">Add Task</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Modal view end -->
            </div>
            <!-- Task Detail End -->
        </main>
        
        <%- include("partials/footer.ejs") %>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <!-- <script src="./index.js"></script> -->
    </body>
</html>
