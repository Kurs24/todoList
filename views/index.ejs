<!DOCTYPE html>
<html lang="en">
    <%- include("partials/header.ejs") %>
    <body>
        <%- include("partials/nav.ejs") %>
        <main>
            <!-- Task Detail Section -->
            <div class="container mt-5 pt-2 min-vh-100" id="taskContainer">
                <h4 class="mb-3 fs-4 white"><%= `${category}` %></h4>
                <div class="d-flex-row">
                    <% taskList.forEach ((task) => { %>
                        <div class="card card-bg mb-3">
                            <form action="/delete" method="post" class="card-body d-flex justify-content-start align-items-center">
                                <input class="form-check-input checkbox-large mt-0 me-3" type="checkbox" name="taskId" value=<%= task._id %> onChange="this.form.submit()" id="task<%= task._id %>" />
                                <label class="form-check-label task-text" for="task<%= task._id %>">
                                    <%= task.name %>
                                </label>
                                <input type="hidden" name="category" value=<%= category %>>
                                <!-- <button type="submit" data-id= class="ms-auto p-0 white btn btn-link" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-caret-right-fill" viewBox="0 0 16 16">
                                        <path d="m12.14 8.753-5.482 4.796c-.646.566-1.658.106-1.658-.753V3.204a1 1 0 0 1 1.659-.753l5.48 4.796a1 1 0 0 1 0 1.506z"/>
                                    </svg>
                                </button> -->
                            </form>
                        </div>
                    <% }) %>
                </div>

                <!-- Add Button -->
                <div class="d-flex justify-content-end">
                    <!-- <button type="submit" class="btn btn-primary btn-lg rounded-circle d-flex justify-content-center align-items-center pb-2" id="addButton">d</button> -->
                    <button type="button" class="addTaskBtn" data-bs-toggle="modal" data-bs-target="#exampleModal">+</button>
                </div>
                <!-- Add Button End -->

                <!-- Modal view -->
                <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-centered modal-lg">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h1 class="modal-title fs-5" id="exampleModalLabel">Add New Task</h1>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <form action="/submit" method="POST">
                                <div class="modal-body">
                                    <div class="mb-3">
                                        <label for="taskForm" class="form-label">What is your Plan?</label>
                                        <textarea class="form-control border border-dark-subtle" id="taskForm" rows="2" name="taskDetail" required></textarea>
                                        <input type="hidden" name="category" value="<%= category %>">
                                    </div>
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                    <button type="submit" class="btn addBtn">Add Task</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                <!-- Modal view end -->
            </div>
            <!-- Task Detail End -->
        </main>
        
        <%- include("partials/footer.ejs") %>
        <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL" crossorigin="anonymous"></script>
        <!-- <script src="./index.js"></script> -->
    </body>
</html>
